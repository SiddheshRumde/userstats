<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.siddhesh.userstats.UserDataActivity">


    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Running Apps"
        android:id="@+id/running"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Installed Apps"
        android:id="@+id/installed"
        android:layout_alignTop="@+id/running"
        android:layout_toEndOf="@+id/running"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimary"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Time Stats"
        android:id="@+id/timestats"
        android:layout_alignBottom="@+id/installed"
        android:layout_toEndOf="@+id/installed"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Stats"
        android:id="@+id/network"
        android:layout_alignBottom="@+id/timestats"
        android:layout_toEndOf="@+id/timestats"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimary"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/output"
        android:layout_below="@+id/running"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/network"
        android:layout_alignParentBottom="true"
        android:background="@color/button_material_light" />
</RelativeLayout>
